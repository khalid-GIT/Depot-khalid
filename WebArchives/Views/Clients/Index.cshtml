    function Delete(id) {
            if (confirm("Etes-vous sur de vouloir supprimer ce client")) {
            $.ajax({
                type: "Post",
                url: "@Url.Action("Delete", "Clients")/" + id ,
                    success: function (data) {
                        if (data.success) {
                            dataTables.ajax.reload(),
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success",
                            })
                         }
                      }
                 });
            }
    }
